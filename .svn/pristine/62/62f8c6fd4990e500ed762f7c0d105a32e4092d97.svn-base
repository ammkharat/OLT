using System.Drawing;
using System.Windows.Forms;

namespace Com.Suncor.Olt.Client.OltControls
{
    public class OltLabelTitle : Label
    {
        private static readonly Font FONT = new Font(UIConstants.FONT_FAMILY_NAME, 9.75F, FontStyle.Bold, GraphicsUnit.Point, ((0)));

        public OltLabelTitle()
        {
            base.AutoSize = false;
            base.BackColor = Color.Gray;
            base.ForeColor = Color.White;
        }

        public override Font Font
        {
            get { return FONT; }
        }
    }
}